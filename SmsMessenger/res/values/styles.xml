<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
        
    <style name="ThemeSelector" parent="android:Theme.Light">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
    </style>
 
    <style name="WindowTitleBackground">     
        <item name="android:background">@color/titlebarColor</item>
    </style>
    
    
    <!-- Button Theme -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@drawable/button</item>        
    </style>
    
    <!-- List style -->
    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
    <item name="android:background">@color/backroundColor</item>
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">0dp</item>
    <item name="android:textColor">@color/darkGrey</item>
    </style>
    
        <!-- Conversation style -->
    <style name="ConversListViewStyle" parent="@android:style/Widget.ListView">
    <item name="android:background">@color/backroundColor</item>
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">0dp</item>
    <item name="android:textColor">@color/darkGrey</item>
    </style>
    
    
    <!-- Input Body style -->
    <style name="inputBodyStyle">
    <item name="android:layout_width">fill_parent</item>
   	<item name="android:layout_height">wrap_content</item>
    <item name="android:hint">@string/new_message_text_hint</item>
    <item name="android:layout_weight">2</item>
    <item name="android:inputType">textMultiLine</item>
    <item name="android:ems">10</item>
    <item name="android:background">@color/backroundColor</item>
    </style>
    
   
    
    
</resources>

